# Copy this file to .env and modify the configuration

# Application Configuration
APP_NAME=FastAPI Auth App
APP_VERSION=1.0.0
DEBUG=FALSE

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# SQLite
DATABASE_URL=sqlite:///./app.db

# Or use other databases
# DATABASE_URL=mysql+pymysql://user:password@localhost/dbname
# DATABASE_URL=postgresql://user:password@localhost/dbname

# JWT Configuration (MUST change in production)
# When DEBUG=False, SECRET_KEY must be at least 32 bytes.
SECRET_KEY=replace-with-a-32-byte-minimum-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Log Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
